<header class="navbar navbar-fixed-top navbar-inverse bg-dark">
<div class="container">
  <%= link_to t("layout.header.sample_app"), root_path, id: "logo" %>
  <nav>
    <ul class="nav navbar-nav navbar-right list-group-horizontal">
      <li><%= link_to t("layout.header.home"), root_path %></li>
      <li><%= link_to t("layout.header.help"), help_path %></li>
      <% if logged_in? %>
        <li><%= link_to t("layout.header.users"), users_path %></li>
        <li class="dropdown">
          <%= link_to current_user, class: "dropdown-toggle", data: {toggle: "dropdown"} do %>
            <%= @current_user.name %><b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <li class="dropdown-item"><%= link_to t("layout.header.profile"), current_user %></li>
            <li class="dropdown-item"><%= link_to t("layout.header.setting"),  edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li>
              <%= link_to t("layout.header.logout"), logout_path, method: :delete %>
            </li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to t("layout.header.login"), login_path %></li>
      <% end %>
      <li><%= link_to t("general.eng"), locale: "en" %></li>
      <li><%= link_to t("general.vie"), locale: "vi" %></li>
    </ul>
  </nav>
</div>
</header>
